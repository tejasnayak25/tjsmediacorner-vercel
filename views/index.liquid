<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="../css/output.css">
    <link rel="stylesheet" href="../css/line.css">
    <link rel="stylesheet" href="../css/material-symbols.css">
    <link rel="shortcut icon" href="../images/logo.jpg" type="image/jpg">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="Where creative tools exist!">
    <meta name="theme-color" content="#e2e8f0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
    <style>
        .righteous-regular {
            font-family: "Righteous", sans-serif;
            font-weight: 400;
            font-style: normal;
        }

    </style>
</head>
<body class="flex flex-col h-full overflow-hidden">
    <header id="main-header" class=" header relative z-20 text-slate-900 dark:text-slate-400 menu menu-horizontal bg-slate-200 dark:bg-slate-900 w-full p-0">
        <nav class=" lg:flex md:flex hidden w-full justify-between p-0 nav-active">
            <ul class="flex gap-1 text-base">
                <li class="btn btn-link rounded-none text-current no-underline hover:no-underline h-full normal-case font-bold">{{ title }}</li>
            </ul>
            <ul id="menu" class="flex gap-1 text-base">
                <a href="/account" class="btn btn-ghost hover:bg-transparent rounded-none h-full normal-case relative">Account<span class="block absolute h-0.5 w-full bottom-0 left-0 bg-primary" style="width: 0;"></span></a>
                <a href="https://tjsmediacorner.gumroad.com/" class="btn btn-ghost hover:bg-transparent rounded-none h-full normal-case relative">Store<span class="block absolute h-0.5 w-full bottom-0 left-0 bg-primary" style="width: 0;"></span></a>
                <a href="/about" class="btn btn-ghost hover:bg-transparent rounded-none h-full normal-case relative">About<span class="block absolute h-0.5 w-full bottom-0 left-0 bg-primary" style="width: 0;"></span></a>
                <a href="/help" class="btn btn-ghost hover:bg-transparent rounded-none h-full normal-case relative">Help<span class="block absolute h-0.5 w-full bottom-0 left-0 bg-primary" style="width: 0;"></span></a>
                <li id="share-btn" class="btn btn-ghost hover:bg-transparent transition-all btn-square rounded-none h-full normal-case flex justify-center items-center">
                    <i class=" aspect-square p-0 transition-all uil uil-share text-lg"></i>
                </li>
                <li id="change-mode-btn" class="btn btn-ghost hover:bg-transparent transition-all btn-square rounded-none h-full normal-case flex justify-center items-center">
                    <i class=" aspect-square p-0 transition-all uil uil-sun block dark:hidden text-lg"></i>
                    <i class=" aspect-square p-0 transition-all uil uil-moon dark:block hidden text-lg"></i>
                </li>
            </ul>
        </nav>
        <nav class=" lg:hidden md:hidden flex w-full justify-between p-1">
            <ul id="mobile-menu" class="hidden flex-col gap-1 text-sm absolute right-0 min-w-40 dark:border-slate-700 border-b border-r text-slate-900 dark:text-slate-400 bg-slate-100 dark:bg-slate-900 p-2" style="top: 56px;">
                <a href="/account" class="p-2 px-3 normal-case">Account</a>
                <a href="https://tjsmediacorner.gumroad.com/" class="p-2 px-3 normal-case">Store</a>
                <a href="/about" class="p-2 px-3 normal-case">About</a>
                <a href="/help" class="p-2 px-3 normal-case">Help</a>
            </ul>
            <li class="btn btn-link rounded-none text-current no-underline hover:no-underline h-full normal-case font-bold">{{ title }}</li>
            <div class=" h-full flex gap-2">
                <li id="share-btn" class="btn btn-ghost transition-all btn-square normal-case flex justify-center items-center">
                    <i class=" aspect-square p-0 transition-all uil uil-share text-lg"></i>
                </li>
                <li id="change-mode-btn" class="btn btn-ghost transition-all btn-square normal-case flex justify-center items-center">
                    <i class=" aspect-square p-0 transition-all uil uil-sun block dark:hidden text-lg"></i>
                    <i class=" aspect-square p-0 transition-all uil uil-moon dark:block hidden text-lg"></i>
                </li>
                <button id="toggle-mobile-menu" class=" btn btn-ghost btn-square rounded-md"><i class=" material-symbols-rounded">menu</i></button>
            </div>
        </nav>
    </header>
    <main class=" flex-1 relative bg-slate-200 dark:bg-slate-900 text-slate-900 dark:text-slate-400">
        <img src="../images/design.png" alt="Poster" class="w-full h-full object-cover -scale-x-100 absolute top-0 z-[11] opacity-35">
        <div class=" w-full h-full relative z-[12] grid md:grid-cols-2 grid-cols-1 md:grid-rows-1 grid-rows-2">
            <div class=" w-full h-full flex flex-col justify-center items-start p-16 md:px-16 px-8">
                <p id="title" class="md:text-8xl text-6xl text-center pb-3 drop-shadow-lg border-slate-800 dark:border-slate-700 mb-12 righteous-regular text-slate-800 dark:text-white" style="transform: translateY(-100px);">We Build Dreams!</p>
                <div id="email-holder" class=" flex border-2 border-slate-400 dark:border-slate-700 bg-slate-800 dark:bg-slate-100 text-slate-100 dark:text-slate-800 w-full" style="transform: translateY(-50px);">
                    <input id="email" type="email" placeholder="Enter email" class=" input bg-transparent flex-shrink-0 min-w-0 flex-1 input-bordered border-0 focus:outline-0 invalid:text-error rounded-none p-3" required>
                    <button id="register-btn" class="peer btn btn-ghost hover:bg-transparent px-10 border-0 border-l-2 border-slate-400 dark:border-slate-700 rounded-none">Register</button>
                </div>
            </div>
            <div class=" w-full h-full p-5">
                <img id="poster" src="../images/undraw_poster.svg" class=" w-full h-full object-contain drop-shadow dark:drop-shadow-xl contrast-150 dark:contrast-125">
            </div>
        </div>
    </main>
    <script src="../js/anime.min.js"></script>
    <script src="../js/theme.js"></script>
    <script src="../js/mobile/ui.js"></script>
    <script src="../js/navbar.js"></script>
    <script src="../js/home.js"></script>
</body>
</html>